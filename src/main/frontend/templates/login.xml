<fest:template xmlns:fest="http://fest.mail.ru">

	<div class="content__wrapper">
		<div class="content__wrapper__logo">
			<span class="content__wrapper__logo__music">
				Music
			</span>
			<span class="content__wrapper__logo__quiz">
				Quiz
			</span>
		</div>
		<div class="wrapper__login-form">
			<span class="wrapper__sign-form__header">
				LOG IN
			</span>
			<div class="sign-form-error"></div>
			<form action="">
                <input class="sign-form__email" type="email" maxlength="20" placeholder="EMAIL"/>
                <input class="sign-form__password" type="password" maxlength="20" placeholder="PASSWORD"/>
                <a class="back-form button" type="back" href="#menu">
                	<i class="fa fa-caret-left fa-lg"></i>
                	<fest:space/>
                	BACK
                </a>
                <button class="submit-form button" type="submit">
                	SIGN IN
                </button>
            </form>
            <span></span>
            <a class="signup-link" href="#signup">
            	Еще нет аккаунта? Зарегистрироваться!
            </a>
		</div>
    </div>

</fest:template>
